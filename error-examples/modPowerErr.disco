-- Exponentiating by squaring algorithm reference:
-- https://simple.wikipedia.org/wiki/Exponentiation_by_squaring
modPower : Nat -> Nat -> Nat -> Nat
modPower n p m = 
	{ 1						if p=0
	{ n % m						if p=1
	{ (modPower (n^2) (p/2) m) % m			if (even p)
	{ (n * (modPower (n^2) ((p-1)/2) m)) % m	if (p>2) && (odd p)

